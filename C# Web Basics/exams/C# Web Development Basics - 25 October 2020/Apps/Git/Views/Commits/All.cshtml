<div class="container">
    <div class="section">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="page-header text-center">
                    <h2 id="tables">My Commits</h2>
                </div>

                <div class="component">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th scope="col">Repository</th>
                            <th scope="col">Description</th>
                            <th scope="col">Created On</th>
                            <th scope="col">Delete</th>

                        </tr>
                        </thead>
                        @foreach (var commit in Model)
                        {
                            <tbody>
                            <tr class="table-light">
                                <th scope="row">@commit.Name</th>
                                <td>@commit.Description</td>
                                <td>@commit.Date</td>
                                <td>
                                    <a class="btn btn-block btn-primary text-white mb-3" href="/Commits/Delete?id=@commit.Id">Delete</a>
                                </td>
                            </tr>
                            </tbody>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>